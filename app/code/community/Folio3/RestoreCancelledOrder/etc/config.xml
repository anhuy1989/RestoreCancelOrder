<?xml version="1.0"?>
<config>
    <modules>
        <Folio3_RestoreCancelledOrder>
            <version>1.0.0</version>
        </Folio3_RestoreCancelledOrder>
    </modules>
    <global>

        <blocks>
            <adminhtml>
                <rewrite>
                    <sales_order_view>Folio3_RestoreCancelledOrder_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <folio3_restorecancelledorder>
                <class>Folio3_RestoreCancelledOrder_Model</class>
                <resourceModel>folio3_restorecancelledorder_resource</resourceModel>
            </folio3_restorecancelledorder>
            <folio3_restorecancelledorder_resource>
                <class>Folio3_RestoreCancelledOrder_Model_Resource</class>
                <entities>
                    <status>
                        <table>folio3_restorecancelledorder_status</table>
                    </status>
                </entities>
            </folio3_restorecancelledorder_resource>
        </models>
        <resources>
            <folio3_restorecancelledorder_setup>
                <setup>
                    <module>Folio3_RestoreCancelledOrder</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </folio3_restorecancelledorder_setup>
        </resources>
        <events>
            <sales_order_place_after>
                <observers>
                    <folio3_restorecancelledorder>
                        <class>Folio3_RestoreCancelledOrder_Model_Observer</class>
                        <method>saveOrderStatus</method>
                        <type>singleton</type>
                    </folio3_restorecancelledorder>
                </observers>
            </sales_order_place_after>
            <sales_order_save_after>
                <observers>
                    <folio3_restorecancelledorder_save_order_status_after_creation>
                        <class>Folio3_RestoreCancelledOrder_Model_Observer</class>
                        <method>saveOrderStatus</method>
                        <type>singleton</type>
                    </folio3_restorecancelledorder_save_order_status_after_creation>
                </observers>
            </sales_order_save_after>
        </events>

    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Folio3_RestoreCancelledOrder before="Mage_Adminhtml">Folio3_RestoreCancelledOrder_Adminhtml</Folio3_RestoreCancelledOrder>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <folio3_restorecancelledorder_core_block_abstract_prepare_layout_before>
                        <class>Folio3_RestoreCancelledOrder_Model_Observer</class>
                        <method>massRestoreOrder</method>
                        <type>singleton</type>
                    </folio3_restorecancelledorder_core_block_abstract_prepare_layout_before>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
    <default>
        <sales>
            <restore_order>
                <status_comment>0</status_comment>
                <is_comment_visible>0</is_comment_visible>
                <notify_customer>0</notify_customer>
                <previous_status_database>1</previous_status_database>
                <restore_status>pending</restore_status>
            </restore_order>
        </sales>
    </default>
</config>